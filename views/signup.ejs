<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Page</title>
</head>
<body>
    <h1>This is a simple Sign Up Page</h1>

    <form >
        <label for="email">Email : </label>
        <input type="text" name="email" id="email">
        <label for="password">Password : </label>
        <input type="password" name="password" id="password">
        <button>Submit</button>
    </form>


    <script>
        //select form 
        const form = document.querySelector('form');
        // prevent default event function from firing 
        form.addEventListener('submit', (e)=> {
            e.defaultPrevented();
        // extract email and password values from form
        const email = form.email.value;
        const password = form.password.value;

        // write try, catch block to make use of extracted email and password
        try {
            // create result constant and use fetch to get signup page and extract details and save them.
            const res = fetch ('/signup', { // pass in method, body in json and headers
                method: 'POST',
                body: JSON.stringify({ email, password }),
                headers: {'Content-Type': 'application/json'}
            })
            
        }
        catch(err) {
            // log error onto console first
            console.log(err);
        }
        })
    </script>
</body>
</html>